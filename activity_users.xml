<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users"
    android:background="#A4CDED">


  <Button
      android:id="@+id/section_head"
      android:layout_width="172dp"
      android:layout_height="54dp"
      android:layout_marginTop="104dp"
      android:text="Section Head"
      android:backgroundTint="#09A092"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/UserChoice" />

  <Button
      android:id="@+id/Meter_Reader"
      android:layout_width="175dp"
      android:layout_height="56dp"
      android:text="Meter Reader"
      android:backgroundTint="#09A092"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/section_head"
      app:layout_constraintVertical_bias="0.154" />

  <TextView
      android:id="@+id/UserChoice"
      android:layout_width="364dp"
      android:layout_height="102dp"
      android:layout_marginTop="68dp"
      android:gravity="center"
      android:text="Select the Desired User"
      android:textSize="30dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>